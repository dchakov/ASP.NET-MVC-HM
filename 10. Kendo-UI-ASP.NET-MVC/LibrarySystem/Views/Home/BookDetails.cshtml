@model LibrarySystem.Models.Book
@{
    ViewBag.Title = "BookDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Book Details</h1>
@(Html.Kendo().Window()
    .Name("Window")
    .Title(Model.Title)
    .Width(600)
    .Resizable()
    .Scrollable(true)
    .Draggable()
    .Content(
    @<div>
        <div class="book-description"><i>by @Model.Author</i></div>
        <div class="book-description"><i>ISBN @Model.ISBN</i></div>
        <div class="book-description"><i>Website:<a href="@Model.WebSite" target="_blank">@Model.WebSite</a> </i></div>
        <div class="book-description">@Model.Description</div>
        <div class="book-description">
            <a href="/Home">Go back</a>
        </div>
    </div>
    )
)
